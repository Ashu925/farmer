<% layout("/layouts/biolerplate") %>

<style>
    body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f0f2f5;
        padding: 50px 20px;
    }

    .form-container {
        max-width: 600px;
        margin: auto;
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    }

    h3 {
        text-align: center;
        color: #222;
        margin-bottom: 30px;
        font-size: 24px;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        color: #333;
        font-weight: 600;
        font-size: 14px;
    }

    .form-control {
        width: 100%;
        padding: 10px 14px;
        border: 1px solid #ccc;
        border-radius: 8px;
        margin-bottom: 20px;
        font-size: 15px;
        transition: border-color 0.3s;
    }

    .form-control:focus {
        border-color: #007bff;
        outline: none;
    }

    .btn {
        display: block;
        width: 100%;
        padding: 12px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn:hover {
        background-color: #0056b3;
    }
</style>

<div class="form-container">
    <h3>Edit Listing</h3>

    <!-- Form to update listing -->
    <form action="/listings/edit/<%= listing._id %>" method="POST" enctype="multipart/form-data">

        <!-- Title Input -->
        <label for="title" class="form-label">Title</label>
        <input name="title" id="title" type="text" value="<%= listing.title %>" class="form-control" placeholder="Enter Title" required>

        <!-- Description Input -->
        <label for="description" class="form-label">Description</label>
        <textarea name="description" id="description" class="form-control" placeholder="Enter Description" rows="4" required><%= listing.description %></textarea>

        <!-- Image Input -->
        <label for="image" class="form-label">Image Link</label>
        <div class="form-group">
            <label for="image">Image</label>
            <% if (listing.image) { %>
                <div style="margin-bottom: 10px;">
                    <img src="/productimage/<%= listing.image %>" alt="Current Image" style="max-width: 100%; height: auto; border-radius: 8px;">
                </div>
            <% } %>
            <input name="image" id="image" type="file" class="form-control" placeholder="Upload Image" accept="image/*">
        </div>
        
        <!-- Price Input -->
        <label for="price" class="form-label">Price</label>
        <input name="price" id="price" type="number" value="<%= listing.price %>" min="0" class="form-control" placeholder="Enter Price" required>

        <!-- Location Input -->
        <label for="location" class="form-label">Location</label>
        <input name="location" id="location" type="text" value="<%= listing.location %>" class="form-control" placeholder="Enter Location" required>

        <!-- Submit Button -->
        <button class="btn" type="submit">Save Changes</button>
    </form>
</div>
